rules_version = '2';

// ===========================================
// üóÑÔ∏è STORAGE SECURITY RULES - KID TO KID
// ===========================================
// √öltima atualiza√ß√£o: Janeiro 2026

service firebase.storage {
  match /b/{bucket}/o {
    
    // ========================================
    // üìã FUN√á√ïES AUXILIARES
    // ========================================
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }
    
    function isStaff() {
      return request.auth != null && 
             (request.auth.token.admin == true || request.auth.token.moderator == true);
    }
    
    function isValidImage() {
      return request.resource.contentType.matches('image/.*') &&
             request.resource.size < 5 * 1024 * 1024; // 5MB m√°ximo
    }
    
    function isValidDocument() {
      return request.resource.contentType.matches('application/pdf') &&
             request.resource.size < 10 * 1024 * 1024; // 10MB m√°ximo
    }
    
    // ========================================
    // üñºÔ∏è IMAGENS DE PRODUTOS
    // ========================================
    match /products/{productId}/{fileName} {
      allow read: if true;
      // DESENVOLVIMENTO: Permitir upload
      allow create, update: if isAuthenticated() && isValidImage();
      allow delete: if isAuthenticated();
    }
    
    // ========================================
    // üìÇ IMAGENS DE CATEGORIAS
    // ========================================
    match /categories/{categoryId}/{fileName} {
      allow read: if true;
      allow write: if isAuthenticated() && isValidImage();
    }
    
    // ========================================
    // üë§ AVATARES DE UTILIZADORES
    // ========================================
    match /users/{userId}/avatar/{fileName} {
      allow read: if true;
      allow create, update: if request.auth != null && 
                               request.auth.uid == userId &&
                               isValidImage() &&
                               request.resource.size < 2 * 1024 * 1024;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Compatibilidade com estrutura antiga
    match /avatars/{userId} {
      allow read: if true;
      allow write: if isAuthenticated() && 
        request.auth.uid == userId && 
        isValidImage();
      allow delete: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // ========================================
    // üè™ BANNERS / SLIDERS
    // ========================================
    match /banners/{fileName} {
      allow read: if true;
      allow write: if isAuthenticated() && isValidImage();
    }
    
    match /sliders/{fileName} {
      allow read: if true;
      allow write: if isAuthenticated() && isValidImage();
    }
    
    // ========================================
    // üìß ANEXOS DE CONTACTO
    // ========================================
    match /contacts/{contactId}/{fileName} {
      allow create: if (isValidImage() || isValidDocument()) &&
                       request.resource.size < 5 * 1024 * 1024;
      allow read: if isStaff();
      allow delete: if isAdmin();
    }
    
    // ========================================
    // üì¶ DOCUMENTOS DE ENCOMENDAS
    // ========================================
    match /orders/{orderId}/{fileName} {
      allow read, write: if isAuthenticated();
    }
    
    // ========================================
    // üîí FICHEIROS TEMPOR√ÅRIOS
    // ========================================
    match /temp/{userId}/{fileName} {
      allow read, write: if request.auth != null && 
                            request.auth.uid == userId &&
                            request.resource.size < 10 * 1024 * 1024;
    }
    
    // ========================================
    // üìä BACKUPS
    // ========================================
    match /backups/{path=**} {
      allow read, write: if false;
    }
  }
}
